{
  "name": "duty_free",
  "version": "1.0.0",
  "description": "backend duty-free",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "inicio": "electron .",
    "pack": "build --dir",
    "pkg-win":"electron-packager . DutyFree_122 --platform=win32 --arch=x64 --icon=./favicon.ico"
  },
  "author": "ciberi.co",
  "license": "ISC",
  "build": {
    "appId": "duty-app",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "favicon.ico"
    },
    "extraFiles": [
      {
        "from": "./public",
        "to": "public"
      }
    ],
    "files": [
      "**/*"
    ]
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.1",
    "connect-multiparty": "^2.2.0",
    "electron-packager": "^15.4.0",
    "express": "^4.17.2",
    "handlebars-pdf": "^1.0.1",
    "jwt-simple": "^0.5.6",
    "mongodb": "^4.3.1",
    "mongoose": "^6.1.8",
    "mongoose-paginate-v2": "^1.5.0",
    "nodemailer": "^6.7.2",
    "nodemailer-express-handlebars": "^4.0.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "socket.io": "^4.4.1",
    "unirest": "^0.6.0"
  },
  "devDependencies": {
    "electron": "^17.1.0"
  }
}
