{
  "name": "duty_free",
  "version": "1.5.9",
  "description": "backend duty-free",
  "main": "main.js",
  "scripts": {
    "postinstall": "",
    "on": "electron .",
    "build": "electron-builder --win",
    "build-dev": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish never",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "pkg-win": "electron-packager . ciberi --platform=win32 --arch=x64 --icon=./build/icon.png --out dist/",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "build": {
    "appId": "co.duty-free.app",
    "asar": true,
    "artifactName": "${productName}-${version}.${ext}",
    "productName": "duty_free",
    "directories": {
      "output": "${productName}-${version}"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/duty.jpg",
      "publisherName": "ciberi.co",
      "publish": [
        {
          "provider": "s3",
          "bucket": "app-duty-free",
          "region": "us-east-2",
          "channel": "latest"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Desistalar ciberi duty-free",
      "license": "licence.md",
      "allowToChangeInstallationDirectory": true
    },
    "extraFiles": [
      {
        "from": "./public",
        "to": "public"
      },
      {
        "from": "./logs",
        "to": "logs"
      }
    ],
    "files": [
      "**/*"
    ]
  },
  "author": "ciberi.co",
  "license": "ISC",
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.1",
    "connect-multiparty": "^2.2.0",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.8",
    "express": "^4.17.2",
    "gridfs-stream": "^1.1.1",
    "handlebars-pdf": "^1.0.1",
    "jwt-simple": "^0.5.6",
    "mongodb": "^4.3.1",
    "mongoose": "^6.1.8",
    "mongoose-paginate-v2": "^1.5.0",
    "multer": "^1.4.5-lts.1",
    "multer-gridfs-storage": "^5.0.2",
    "nodemailer": "^6.7.2",
    "nodemailer-express-handlebars": "^4.0.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "socket.io": "^4.4.1",
    "unirest": "^0.6.0"
  },
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "^24.13.3"
  }
}
